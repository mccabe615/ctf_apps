		<li class="active"><a href="create_user">Create Users</a></li>
		<li ><a href="edit_users">Edit Users</a></li>
        <li><a href="#">Edit Teams</a></li>
      </ul>
</div>

<div class="container" align="center" style="display: inline-block;">
	<div class="row">
		<h1> Create User </h1>
			<% flash.each do |name, msg| %>
				<% if name == :error %> 
					<div class="alert alert-error" style="width: 20%; margin-top: 50px">
						<a class="close" data-dismiss="alert" href="#">×</a>
			  				<%= content_tag :div, msg, :id => "flash_notice" %>
					</div>
				<% elsif name == :success %>
					<div class="alert alert-success" style="width: 20%; margin-top: 50px">
						<a class="close" data-dismiss="alert" href="#">×</a>
			  				<%= content_tag :div, msg, :id => "flash_notice" %>
					</div>
				<% elsif name == :info %>
					<div class="alert alert-info" style="width: 20%; margin-top: 50px">
						<a class="close" data-dismiss="alert" href="#">×</a>
							<%= content_tag :div, msg, :id => "flash_notice" %>
					</div>
				<% end %>
				
					
			<% end %>
	<div class="span12" align="center">	
		<div style="margin-top: 30px">
		<%= form_for @user do |f| %>
  			<p>
  			  <%= f.label :email %><br />
  			  <%= f.text_field :email %>
  			</p>
  			<p>
  			  <%= f.label :password %><br />
  			  <%= f.password_field :password %>
  			</p>
  			<p>
  			  <%= f.label :password_confirmation %><br />
  			  <%= f.password_field :password_confirmation %>

			<p>
				<%= select_tag "team", options_from_collection_for_select(all_teams, "name", "name") %>
			</p>

			<p>
				<%= select_tag "role", options_from_collection_for_select(all_roles.reverse!, "id", "name") %>
			</p>
  			</p>
  			 <p><%= submit_tag "create", :class => "btn btn-primary" %></p>
		<% end %>
		</div>
	</div>
	</div>
</div>



