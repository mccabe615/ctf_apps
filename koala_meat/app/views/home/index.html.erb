<%= stylesheet_link_tag "home" %>
<h1> KoalaMeat!</h1>
<img src="/assets/bamboo.jpg" alt="background image" id="bg" />
<div id="user_nav" style="position: absolute; top: 0; right: 0; width: auto; text-align:right;">
  <% if current_user %>
    <!--
    #This is my XSS-able version
    Logged in as <%= raw(current_user.email) %>.
    -->
    Logged in as <%= current_user.email %>.
    <%= link_to "Log out", log_out_path,  :class => "a"%>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "Log in", log_in_path %>
  <% end %>
</div>

<div id="navigator">
  <%= button_to "Home", {:action => "index"}, {:method => "get", :class => "button_home"}%>
  <%= button_to "Catalog", {:action => "catalog"}, {:method => "get", :class => "button_home"}%>
  <%= button_to "Contact Us", {:action => "contact_us"}, {:method => "get", :class => "button_home"}%>
  <%= button_to "About Us", {:action => "about_us"}, {:method => "get", :class => "button_home"}%>
</div>

