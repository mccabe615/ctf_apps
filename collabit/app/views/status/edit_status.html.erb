<% content_for :head do %>
<%= include_puny_mce  %>
<%=stylesheet_link_tag("application")%>
<%=stylesheet_link_tag("status")%>

<h1>Edit a status report</h1>
<div id="user_nav" style="position: absolute; top: 0; right: 0; width: auto; text-align:right;">
  <%= link_to "Back", home_path, {:class => "a"} %>
  <%= link_to "Sign Out", logout_path, {:class => "a"} %>
</div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_notice" %>
<% end %>
 <div id="outer_status" >
 <div class="editor" align="center" >
  <%= form_tag(save_status_path, {:method => "post"}) %>
 <p>
  <%= label_tag(:title, "Title") %><br/>
  <%= text_field_tag(:title,  @single_s.title)%><br/>
 </p>
 <p>
  <%=label_tag(:week_ending, "Week Ending") %><br/>
  <%= text_field_tag(:week_ending, @single_s[:week_ending]) %><br/>
 </p>
 <%= text_area_tag(:status,  @single_s[:status], {:style => "width:1000px;height:300px"}) %>
 <%= raw(puny_mce 'status', 'status', :profile => :all) %>
 <p>
  <%= submit_tag 'save', {:class => "button_home"} %>
 </p>
 </div>
<% end %>

 </div>
 